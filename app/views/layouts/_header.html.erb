<header class="navbar navbar-static-top navbar-inverse">
  <div class="container">
    <nav>
        <%= link_to image_tag('nlpt-logo.png'), root_url, :class => 'header-logo navbar-left' %>
      <% if signed_in? %>
        <form class="navbar-form navbar-left" role="search">
          <%= react_component 'ClientSearchBar' %>
        </form>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if signed_in? %>
          <li><%= link_to "Clients", clients_path %></li>
          <li><%= link_to "Coaches", coaches_path %></li>
          <li><%= link_to "Updates", updates_path %></li>
          <li class="dropdown active">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.first_name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Home", root_url %></li>
              <li><%= link_to "Profile", edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: 'delete' %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>