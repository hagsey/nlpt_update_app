<div class="home-page">
  <br>
  <h1 class="text-center">Latest client updates</h1>
  <br>
  <br>
  <div class="col-sm-4">
    <ul class="list-group">
      <li class="list-group-item active">
        <h4 class="list-group-item-heading">Most recent</h4>
      </li>
      <% @updates.each do |update| %>
        <li class="list-group-item">
          <div class="row">
            <div class="col-sm-3">
              <% if update.client.profile_image? %>
                <%= image_tag update.client.profile_image.url, class: 'img-circle img-responsive' %>
              <% else %>
                <%= image_tag(('client_default_profile.jpg'), class: 'img-circle img-responsive') %>
              <% end %>
            </div>
            <div class="col-sm-9">
              <p><%= link_to update.client.full_name, client_path(update.client) %></p>
              <small><%= format_date(update.date) %></small>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-sm-8">
    <%= render 'shared/update_loop' %>
  </div>
</div>